<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_orange"
    tools:context=".BuyerModule.Dashboard.FoodDescFragment">


    <TextView
        android:id="@+id/tvVendorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:maxLines="8"
        android:justificationMode="inter_word"
        android:text="Jollof Rice or jollof, also known as benachim in Wolof, is a rice dish popular in many west African countries. It is also called 'reddish one-pot dish' and varies in various countries. It has varieties of .... read more"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rlOrderFood"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tvVendorName"
        android:layout_marginTop="22dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/ivOrderFood"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:layout_toStartOf="@id/tvOrderFood"
            android:src="@drawable/ic_outline_shopping_cart_24" />

        <TextView
            android:id="@+id/tvOrderFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ORDER FOOD"
            android:textColor="@color/main_orange"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>