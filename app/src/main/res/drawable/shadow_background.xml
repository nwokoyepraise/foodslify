<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->

    <item>
        <shape>
            <padding  android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="1dp"  />
            <solid android:color="#08000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding  android:right="0dp" android:left="0dp" android:top="1dp" android:bottom="1dp"  />
            <solid android:color="#10000000" />
            <corners android:radius="9dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding  android:right="1dp" android:left="1dp" android:bottom="1dp"  />
            <solid android:color="#12000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding  android:right="1dp" android:left="1dp"  android:bottom="1dp"  />
            <solid android:color="#14000000" />
            <corners android:radius="7dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</layer-list>